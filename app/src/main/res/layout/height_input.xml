<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="250dp"
    android:padding="12dp"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_your_height"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/centimeters_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="65dp"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/numberPicker_cm"
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@id/numberPicker_cm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/sm" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/millimeters_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/centimeters_layout"
        android:layout_marginStart="4dp">

        <NumberPicker
            android:id="@+id/numberPicker_mm"
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@id/numberPicker_mm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mm"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="@string/ОК"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />
</RelativeLayout>
